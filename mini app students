class Student:
    def __init__(self, name, family, codestudent):
        self.name = name
        self.family = family
        self.codestudent = codestudent

    def __str__(self):
        return f"{self.name} - {self.family} - {self.codestudent}"
    

class StudentsManager:
    def __init__(self):
        self.students = []  # Ù„ÛŒØ³Øª Ø¨Ø±Ø§ÛŒ Ø°Ø®ÛŒØ±Ù‡ Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒØ§Ù†
        self.next_code = 1000

    def add_student(self, student):
        """Ø§ÙØ²ÙˆØ¯Ù† Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒ Ø¬Ø¯ÛŒØ¯"""
        # Ø¨Ø±Ø±Ø³ÛŒ ÙˆØ¬ÙˆØ¯ Ø¯Ø§Ù†Ø´Ø¬Ùˆ Ø¨Ø§ Ù‡Ù…Ø§Ù† Ù†Ø§Ù…
        for s in self.students:
            if s.name == student.name:
                return False, "Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒÛŒ Ø¨Ø§ Ø§ÛŒÙ† Ù†Ø§Ù… Ø§Ø² Ù‚Ø¨Ù„ ÙˆØ¬ÙˆØ¯ Ø¯Ø§Ø±Ø¯"
        
        # Ø§ÙØ²ÙˆØ¯Ù† Ø¯Ø§Ù†Ø´Ø¬Ùˆ Ø¨Ù‡ Ù„ÛŒØ³Øª
        self.students.append(student)
        return True, "Ø¯Ø§Ù†Ø´Ø¬Ùˆ Ø¨Ø§ Ù…ÙˆÙÙ‚ÛŒØª Ø§ÙØ²ÙˆØ¯Ù‡ Ø´Ø¯"

    def remove_student_by_name(self, name):
        """Ø­Ø°Ù Ø¯Ø§Ù†Ø´Ø¬Ùˆ Ø¨Ø± Ø§Ø³Ø§Ø³ Ù†Ø§Ù…"""
        for i, student in enumerate(self.students):
            if student.name == name:
                self.students.pop(i)
                return True, f"Ø¯Ø§Ù†Ø´Ø¬Ùˆ '{name}' Ø­Ø°Ù Ø´Ø¯"
        return False, "Ø¯Ø§Ù†Ø´Ø¬Ùˆ ÛŒØ§ÙØª Ù†Ø´Ø¯"

    def remove_student_by_index(self, index):
        """Ø­Ø°Ù Ø¯Ø§Ù†Ø´Ø¬Ùˆ Ø¨Ø± Ø§Ø³Ø§Ø³ Ø§ÛŒÙ†Ø¯Ú©Ø³"""
        if 0 <= index < len(self.students):
            student = self.students.pop(index)
            return True, f"Ø¯Ø§Ù†Ø´Ø¬Ùˆ '{student.name}' Ø­Ø°Ù Ø´Ø¯"
        return False, "Ø§ÛŒÙ†Ø¯Ú©Ø³ Ù†Ø§Ù…Ø¹ØªØ¨Ø±"

    def get_all_students(self):
        """Ø¯Ø±ÛŒØ§ÙØª Ù‡Ù…Ù‡ Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒØ§Ù†"""
        return self.students


