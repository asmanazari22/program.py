    def show_message(self, text, color="red"):
        """Ù†Ù…Ø§ÛŒØ´ Ù¾ÛŒØ§Ù…"""
        self.message_label.config(text=text, fg=color)
        self.root.after(3000, lambda: self.message_label.config(text=""))

