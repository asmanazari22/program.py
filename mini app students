        else:
            self.show_message(message, "red")

    def refresh_list(self):
        """ØªØ§Ø²Ù‡â€ŒØ³Ø§Ø²ÛŒ Ù„ÛŒØ³Øª Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒØ§Ù†"""
        self.listbox.delete(0, tk.END)
        
        students = self.students_manager.get_all_students()
        for student in students:
            self.listbox.insert(tk.END, str(student))
        
        # Ù†Ù…Ø§ÛŒØ´ ØªØ¹Ø¯Ø§Ø¯ Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒØ§Ù†
        count = len(students)
        status_text = f"ØªØ¹Ø¯Ø§Ø¯ Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒØ§Ù†: {count}"
