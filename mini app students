        # Ù„ÛŒØ³Øªâ€ŒØ¨Ø§Ú©Ø³
        list_frame = tk.Frame(self.root)
        list_frame.pack(fill=tk.BOTH, expand=True, padx=15, pady=10)
        # Ø¹Ù†ÙˆØ§Ù† Ù„ÛŒØ³Øª
        tk.Label(list_frame, text="Ù„ÛŒØ³Øª Ø¯Ø§Ù†Ø´Ø¬ÙˆÛŒØ§Ù†:", font=("Arial", 11, "bold")).pack(anchor="w")
        
